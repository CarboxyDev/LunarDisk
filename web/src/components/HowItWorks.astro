---
const STEPS = [
  {
    number: '01',
    title: 'Download',
    description: 'Grab the latest release from GitHub. No account, no subscription, no app store.',
    color: 'text-emerald-500',
    bg: 'bg-emerald-500/10',
    border: 'border-emerald-500/20',
    icon: 'download',
  },
  {
    number: '02',
    title: 'Scan',
    description: 'Choose any folder or volume and start a recursive scan. Watch the directory tree build in real time.',
    color: 'text-blue-500',
    bg: 'bg-blue-500/10',
    border: 'border-blue-500/20',
    icon: 'scan',
  },
  {
    number: '03',
    title: 'Clean',
    description: 'Inspect the size breakdown, drill into large directories, and safely delete what you no longer need.',
    color: 'text-violet-500',
    bg: 'bg-violet-500/10',
    border: 'border-violet-500/20',
    icon: 'clean',
  },
] as const;
---

<section class="relative overflow-hidden px-6 py-24 md:py-32">
  <div class="mx-auto max-w-5xl">

    <!-- Section header -->
    <div class="mb-14 text-center">
      <h2
        data-animate
        class="mb-4 text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
      >
        Get started in minutes
      </h2>
      <p data-animate data-delay="1" class="mx-auto max-w-2xl text-lg text-muted-foreground">
        No complex setup. No accounts. Just download and start scanning.
      </p>
    </div>

    <!-- Steps -->
    <div class="relative grid gap-12 md:grid-cols-3 md:gap-8">

      <!-- Connector line (desktop only) -->
      <div class="pointer-events-none absolute left-0 top-12 hidden w-full md:block" aria-hidden="true">
        <div class="h-px w-full bg-gradient-to-r from-transparent via-border to-transparent"></div>
      </div>

      {STEPS.map((step, i) => (
        <div
          data-animate
          data-delay={String(i + 1)}
          class="relative flex flex-col items-center text-center"
        >
          <!-- Icon circle -->
          <div class={`mb-6 flex h-24 w-24 items-center justify-center rounded-3xl border bg-card shadow-sm backdrop-blur-sm transition-transform duration-300 hover:scale-105 ${step.border}`}>
            <div class={`flex h-16 w-16 items-center justify-center rounded-2xl ${step.bg}`}>
              {step.icon === 'download' && (
                <svg xmlns="http://www.w3.org/2000/svg" class={`h-8 w-8 ${step.color}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              )}
              {step.icon === 'scan' && (
                <svg xmlns="http://www.w3.org/2000/svg" class={`h-8 w-8 ${step.color}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
                </svg>
              )}
              {step.icon === 'clean' && (
                <svg xmlns="http://www.w3.org/2000/svg" class={`h-8 w-8 ${step.color}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              )}
            </div>
          </div>

          <h3 class="mb-3 text-xl font-bold text-foreground">{step.title}</h3>
          <p class="text-base leading-relaxed text-muted-foreground">{step.description}</p>
        </div>
      ))}
    </div>

  </div>
</section>
