---
const FEATURES = [
  {
    title: 'Visual disk map',
    description:
      'See your storage as an interactive treemap. Spot large directories and files at a glance without reading any numbers.',
    icon: 'chart',
  },
  {
    title: 'Recursive scanning',
    description:
      'Deep scan any folder or entire volume. Every subdirectory is mapped with accurate sizes you can trust.',
    icon: 'folder',
  },
  {
    title: 'Safe cleanup',
    description:
      'Review exactly what you\'re about to delete before acting. Drill into large items and decide with full context.',
    icon: 'trash',
  },
  {
    title: 'File type breakdown',
    description:
      'Understand your storage by file type. Find where videos, developer caches, and other data quietly accumulate.',
    icon: 'bar',
  },
  {
    title: 'Local-first scanning',
    description:
      'All scanning stays entirely on your Mac. No data is read, transmitted, or stored anywhere outside your device.',
    icon: 'shield',
  },
  {
    title: 'Fully open source',
    description:
      'The entire codebase is on GitHub. Inspect it, fork it, and contribute freely. Trust through transparency.',
    icon: 'code',
  },
] as const;
---

<section id="features" class="px-6 py-20 md:py-28">
  <div class="mx-auto max-w-6xl">

    <!-- Section header -->
    <div class="mb-14 text-center">
      <h2
        data-animate
        class="mb-4 text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
      >
        Everything you need to reclaim your disk
      </h2>
      <p data-animate data-delay="1" class="mx-auto max-w-2xl text-lg text-muted-foreground">
        Built for macOS users who want clarity before they clean.
      </p>
    </div>

    <!-- Feature cards grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {FEATURES.map((feature, i) => (
        <div
          data-animate
          data-delay={String((i % 3) + 1)}
          class="group rounded-xl border border-border bg-card p-6 transition-shadow duration-200 hover:shadow-md"
        >
          <!-- Icon -->
          <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary">
            {feature.icon === 'chart' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            )}
            {feature.icon === 'folder' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 7a2 2 0 012-2h4l2 2h8a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2V7z" />
              </svg>
            )}
            {feature.icon === 'trash' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            )}
            {feature.icon === 'bar' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            )}
            {feature.icon === 'shield' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            )}
            {feature.icon === 'code' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            )}
          </div>
          <h3 class="mb-2 text-base font-semibold text-foreground">{feature.title}</h3>
          <p class="text-sm leading-relaxed text-muted-foreground">{feature.description}</p>
        </div>
      ))}
    </div>

  </div>
</section>
